        #     line_color: "red"
        #     halign: "center"
        #     size_hint: (1, 0.5)
        #     on_release: 
        #         root.entrance_button_behavior()



<CommanderWindow>:
    name: "commanderwindow"

    sail_png: sail_png
    wind_png: wind_png
    command_text: command_text
    sail_wende: sail_wende
    sail_halse: sail_halse
    sail_mob: sail_mob
    command_hints: command_hints
    arrow_left:arrow_left
    arrow_right: arrow_right

    GridLayout:
        cols: 1
        size_hint: (0.995, 0.995)

        MDTopAppBar:
            # title: app.title
            # md_bg_color: "#e7e4c0"
            left_action_items: [["sail-boat", lambda x: nav_drawer.set_state("open"), "", ""]]

        GridLayout:
            cols: 1
            size_hint: (1, 0.02)

        GridLayout:
            cols: 1
            size_hint: (0.95, 0.95)
            # pos_hint: {"center_x": 0.5, "center_y": 0.5}

            Image: 
                id: sail_png
                source: "assets/sails/sail_down_bb.png"

        GridLayout:
            cols: 1
            size_hint: (0.3, 0.1)

            MDLabel:
                id:command_wind
                text:"Windrichtung"
                size_hint: (1, 0.5)
                halign: "center"
                text_color: "black"

        GridLayout:
            cols: 3
            size_hint: (0.5, 0.15)

            MDIconButton:
                id:arrow_left
                icon: "arrow-left-bold"
                #on_release: root.show_toast()
                size_hint: (0.4, 1)

            Image: 
                id: wind_png
                source: "assets/wind/wind_45.png"

            MDIconButton:
                id: arrow_right
                icon: "arrow-right-bold"
                #on_release: root.show_toast()
                size_hint: (0.4, 1)

        GridLayout:
            cols: 1
            size_hint: (0.01, 0.01)

        GridLayout:
            cols: 1
            size_hint: (0.6, 0.2)
            # pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MDLabel:
                id:command_hints
                text:"Bitte Kommandos eingeben"
                size_hint: (1, 0.5)
                halign: "center"
                text_color: "black"

            TextInput:
                id: command_text
                font_size: 24
                multiline: False
                size_hint: (1, 0.5)
                padding_y: (5, 5)

        GridLayout:
            cols: 1
            size_hint: (1, 0.03)

        GridLayout:
            cols: 2
            size_hint: (0.6, 0.1)

            MDIconButton:
                icon: "delete"
                on_release: root.show_toast()
                size_hint: (0.1, 0.1)
            
            MDIconButton:
                icon: "send"
                on_release: root.show_toast()
                size_hint: (0.1, 0.1)


        MDBottomAppBar:

            MDTopAppBar:
                title: ""
                icon: "microphone"
                mode: "center"

    MDNavigationDrawer:
        id: nav_drawer
        radius: (0, 16, 16, 0)
        type: "modal"
        # https://kivymd.readthedocs.io/en/1.1.1/components/navigationdrawer/index.html

        MDNavigationDrawerMenu:

            MDNavigationDrawerHeader:
                title: "Szenarios"
                title_color: "#4a4939"
                text: ""
                source: "assets/logos/SAIL_logo.png"
                spacing: "4dp"
                padding: "12dp", 0, 0, "56dp"

            MDNavigationDrawerLabel:
                text: "Einfach"

            MDNavigationDrawerItem:
                id: sail_wende
                icon: "sail-boat"
                text: "Wende"
                right_text: ""
                selected_color: "##0f9664"
                focus_color: "#e7e4c0"
                color: "#000000"
            
            MDNavigationDrawerItem:
                id: sail_halse
                icon: "sail-boat"
                text: "Halse"
                right_text: ""
                selected_color: "##0f9664"
                focus_color: "#e7e4c0"

            MDNavigationDrawerDivider:

            MDNavigationDrawerLabel:
                text: "Komplex"

            MDNavigationDrawerItem:
                id: sail_mob
                icon: "account-alert"
                text: "MOB / BOB"
                right_text: ""
                selected_color: "##0f9664"
                focus_color: "#e7e4c0"





