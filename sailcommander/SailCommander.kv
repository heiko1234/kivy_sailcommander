MDScreenManager:
    WelcomeWindow:
    CommanderWindow:


<WelcomeWindow>:
    name: "welcomewindow"

    GridLayout:
        cols: 1
        size_hint: 0.6, 0.6
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Image: 
            source: "assets/logos/SAIL_Commander.png"

        # MDRectangleFlatButton:
        MDRoundFlatIconButton:
            text: "Los aufs Wasser"
            icon: "sail-boat"
            theme_text_color: "Custom"
            text_color: "blue"
            line_color: "blue"
            halign: "center"
            size_hint: (0.1, 0.2)
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            on_release: 
                root.entrance_button_behavior()


<CommanderWindow>:
    name: "commanderwindow"

    # https://kivymd.readthedocs.io/en/1.1.1/behaviors/magic/

    # pictures
    sail_png: sail_png
    wind_png: wind_png
    # Scenarios:
    sail_segel_up: sail_segel_up
    sail_segel_down: sail_segel_down
    sail_wende: sail_wende
    sail_halse: sail_halse
    # sail_mob: sail_mob
    # actions:
    send_command: send_command
    delete_command: delete_command
    command_text: command_text
    command_hints: command_hints
    arrow_left:arrow_left
    arrow_right: arrow_right
    # toggle
    # TODO: hints_onoff
    hints_onoff: hints_onoff
    # mic_onoff: mic_onoff

    GridLayout:
        cols: 1
        size_hint: 0.995, 0.995

        MDTopAppBar:
            # title: app.title
            # md_bg_color: "#e7e4c0"
            left_action_items: [["sail-boat", lambda x: nav_drawer.set_state("open"), "", ""]]

        # GridLayout:
        #     cols: 1
        #     size_hint: 1, 0.02

        # GridLayout:
        #     cols: 2
        #     size_hint: 0.6, 0.05
        GridLayout:
            cols: 1
            # size_hint: 1.2, 1.2


        # FloatLayout:

            MyToggleButton:
                text: "Hinweis geben"
                id: hints_onoff
                group: "x"
                theme_text_color: "Custom"
                background_down: "green"
                # md_bg_color: "grey"
                background_normal: ""
                line_color: "blue"
                text_color: "blue"
                size_hint: 0.1, .1
                # pos_hint: {"x": 0.55, "y": 0.9}
                pos_hint: {"x": 0.47, "y": 0.9}
                # 
                on_state: root.commando_hint()

            # Image:
            FitImage: 
                id: sail_png
                # size_hint: 1, 1
                #pos_hint: {"x": 0, "y": 0}
                #keep_ratio: True
                # allow_stretch: True
                source: "assets/sails/sail_down_bb.png"
                # size_hint: 
                size: 360, 360

            # MyToggleButton:
            #     text: "Mic"
            #     id: mic_onoff
            #     group: "x"
            #     theme_text_color: "Custom"
            #     background_down: "green"
            #     line_color: "blue"
            #     text_color: "blue"
            #     size_hint: 0.1, .1
            #     pos_hint: {"x": 0.35, "y": 0.9}

            # When with FloatLayout 
            # MyToggleButton:
            #     text: "Hinweise"
            #     id: hints_onoff
            #     group: "x"
            #     theme_text_color: "Custom"
            #     background_down: "green"
            #     # md_bg_color: "grey"
            #     background_normal: ""
            #     line_color: "blue"
            #     text_color: "blue"
            #     size_hint: 0.1, .1
            #     # pos_hint: {"x": 0.55, "y": 0.9}
            #     pos_hint: {"x": 0.47, "y": 0.9}
            #     # 
            #     on_state: root.commando_hint()

        GridLayout:
            cols: 1
            size_hint: (0.6, 0.2)
            # pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MDLabel:
                id:command_hints
                text:"Bitte Kommandos eingeben"
                size_hint: (1, 0.5)
                halign: "center"
                text_color: "black"

            # MDTextField:
            #     # hint_text: "Hier Kommando eingeben"
            #     helper_text: "Text eingeben"
            #     helper_text_mode: "on_focus"
            #     id: command_text
            #     # font_size: 36
            #     multiline: False
            #     size_hint: (1, 0.5)
            #     mode: "rectangle"
            #     color_mode: 'custom'
            #     line_color_focus: 1, 0, 1, 1
            #     line_color_normal: "blue"
            #     normal_color: "grey"
            #     md_bg_color: "grey"
            #     text_color: "black"
            
            TextInput:
                id: command_text
                multiline: False
                size_hint: (1, 0.5)
                halign: "center"
                text_color: "black"


        GridLayout:
            cols: 2
            size_hint: (0.6, 0.1)

            MDIconButton:
                icon: "delete"
                id: delete_command
                on_release: 
                    # root.show_toast()
                    root.clear_command()
                    root.commando_hint()
                size_hint: (0.1, 0.1)
            
            MDIconButton:
                icon: "send"
                id: send_command
                on_release: 
                    root.commando()
                    root.commando_hint()
                size_hint: (0.1, 0.1)


        GridLayout:
            cols: 1
            size_hint: (0.3, 0.1)

            MDLabel:
                id: command_wind
                text:"Windrichtung"
                size_hint: (1, 0.5)
                halign: "center"
                text_color: "black"

        GridLayout:
            cols: 3
            size_hint: (0.5, 0.15)

            MDIconButton:
                id: arrow_left
                icon: "arrow-left-bold"
                on_release: root.left()
                size_hint: (0.4, 1)

            Image: 
                id: wind_png
                source: "assets/wind/wind_00.png"

            MDIconButton:
                id: arrow_right
                icon: "arrow-right-bold"
                on_release: root.right()
                size_hint: (0.4, 1)

        GridLayout:
            cols: 1
            size_hint: (0.01, 0.01)

        GridLayout:
            cols: 1
            size_hint: (1, 0.1)

        MDBottomAppBar:

            # MDTopAppBar:
            #     title: ""
            #     icon: "microphone"
            #     mode: "center"


    MDNavigationDrawer:
        id: nav_drawer
        radius: (0, 16, 16, 0)
        type: "modal"
        # https://kivymd.readthedocs.io/en/1.1.1/components/navigationdrawer/index.html

        MDNavigationDrawerMenu:

            MDNavigationDrawerHeader:
                title: "Szenarios"
                title_color: "#4a4939"
                text: ""
                source: "assets/logos/SAIL_logo.png"
                spacing: "4dp"
                padding: "12dp", 0, 0, "56dp"


            MDNavigationDrawerLabel:
                text: "Basics"

            MDNavigationDrawerItem:
                id: sail_segel_up
                icon: "sail-boat"
                text: "Segel setzen"
                right_text: ""
                selected_color: "##0f9664"
                #focus_color: "#e7e4c0"
                color: "#000000"
                # on_state: 
                #     root.select_scenario()
                #     root.commando_hint()

            MDNavigationDrawerItem:
                id: sail_segel_down
                icon: "sail-boat"
                text: "Segel bergen"
                right_text: ""
                selected_color: "##0f9664"
                #focus_color: "#e7e4c0"
                color: "#000000"

            MDNavigationDrawerDivider:

            MDNavigationDrawerLabel:
                text: "Einfach"

            MDNavigationDrawerItem:
                id: sail_wende
                icon: "sail-boat"
                text: "Wende"
                right_text: ""
                selected_color: "##0f9664"
                #focus_color: "#e7e4c0"
                color: "#000000"
                on_release: 
                    root.select_scenario()
                    root.commando_hint()
            
            MDNavigationDrawerItem:
                id: sail_halse
                icon: "sail-boat"
                text: "Halse"
                right_text: ""
                selected_color: "##0f9664"
                #focus_color: "#e7e4c0"

            MDNavigationDrawerDivider:

