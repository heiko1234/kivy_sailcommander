<CommanderWindow>:
    name: "commanderwindow"

    sail_png: sail_png
    command_text: command_text

    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(5)

        GridLayout:
            cols: 1
            size_hint: (0.6, 0.6)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            Image: 
                id: sail_png
                source: "assets/sails/sail_down_bb.png"

        GridLayout:
            cols: 2
            size_hint: (0.6, 0.1)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            TextInput:
                id: command_text
                multiline: False
                size_hint: (0.5, 0.5)
                padding_y: (20, 20)

            # MDLabel:
            #     id:command_text
            #     text:""
            #     size_hint: (0.5, 0.5)
            #     md_bg_color: [0.119, 0.136, 0.153, 1]

            MDRaisedButton:
                text: "TEST KIVY TOAST"
                on_release: root.show_toast()
                size_hint: (0.5, 0.5)






