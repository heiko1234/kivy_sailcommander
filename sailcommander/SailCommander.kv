MDScreenManager:
    WelcomeWindow:
    CommanderWindow:


<WelcomeWindow>:
    name: "welcomewindow"

    # entrance_name_label:entrance_name_label_kv

    GridLayout:
        cols: 1
        size_hint: (0.6, 0.6)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Image: 
            source: "assets/logos/SAIL_Commander.png"

        # https://kivymd.readthedocs.io/en/1.1.1/components/button/index.html
